        </StackLayout>-->

        <StackLayout Padding="20"
                     RadioButtonGroup.GroupName="Pets2">
            <Label Text="What animal is your favorite?"
           FontSize="Large" TextColor="Blue"/>
            <RadioButton Content="Cat"
                 Value="Cat"
                         CheckedChanged="RadioButton_CheckedChanged"/>
            <RadioButton Content="Dog"
                 Value="Dog"
                         CheckedChanged="RadioButton_CheckedChanged"/>
            <RadioButton Content="Rooster" 
                 Value="Rooster"                
                 IsChecked="True"
                         CheckedChanged="RadioButton_CheckedChanged"/>
            <Label x:Name="lblPets2" Text=""/>
        </StackLayout>

        <StackLayout>
            <SearchBar Placeholder="Search product"
                       SearchButtonPressed="SearchBar_SearchButtonPressed"
                       BackgroundColor="Cyan"/>
        </StackLayout>

        <SwipeView BackgroundColor="LightCyan">
            <SwipeView.LeftItems>
                <SwipeItems>
                    <SwipeItem
                        BackgroundColor="LightGreen"
                        IconImageSource="cat.png"
                        Invoked="SwipeItem_Invoked"
                        Text="Cat"/>
                    <SwipeItem
                         BackgroundColor="LightPink"
                         IconImageSource="rooster.png"
                         Invoked="SwipeItem_Invoked"
                         Text="Rooster"/>   
                </SwipeItems>  
            </SwipeView.LeftItems>
            <SwipeView.RightItems>
                <SwipeItem
                      BackgroundColor="LemonChiffon"
                      IconImageSource="dog.png"
                      Invoked="SwipeItem_Invoked"
                      Text="Dog"/>
            </SwipeView.RightItems>
            <Grid BackgroundColor="LightGray"
                  HeightRequest="60"
                  WidthRequest="300">
                <Label HorizontalOptions="Center"
                       Text="&lt;== Deslizar ==>"
                       FontSize="Large"
                       VerticalOptions="Center"/>
            </Grid>            
        </SwipeView>

    </VerticalStackLayout>
</ContentPage>