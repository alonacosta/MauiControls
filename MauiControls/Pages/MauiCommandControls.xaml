<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiControls.Pages.MauiCommandControls"
             Title="Maui Command Controls">
    <VerticalStackLayout Margin="10">
        <Button Text="Click for rotate text"
                BackgroundColor="Green"
                x:Name="btnDemo"
                Clicked="btnDemo_Clicked"
                VerticalOptions="Center"
                HorizontalOptions="Center"/>
        <Label x:Name="lblDemo"
               Text=".NET MAUI"
               TextColor="Blue"
               FontSize="25"
               FontAttributes="Bold"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>

        <!--<Button Text="Click for rotate text"
         BackgroundColor="Green"
                ImageSource="net_pot.svg"
         x:Name="btnDemo"
         Clicked="btnDemo_Clicked"
         VerticalOptions="Center"
         HorizontalOptions="Center"
                IsEnabled="True"/>-->

        <ImageButton Source="dotnet_bot.svg"
                     x:Name="btnImageDemo"
                     Aspect="AspectFit"
                     BorderColor="Black"
                     Clicked="btnImage_Clicked"
                     HeightRequest="200"
                     WidthRequest="200"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"/>

        <!--<StackLayout Padding="20">
            <Label Text="What animal is your favorite?"
